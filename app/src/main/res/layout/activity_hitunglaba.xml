<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hitunglaba">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:stateListAnimator="@null">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/white"
            android:background="@color/white"
            app:title="Masukan Data Penjualan"
            android:theme="@style/ThemeOverlay.AppCompat.Light"
            app:collapsedTitleTextAppearance="@style/Toolbar.TitleText"
            app:expandedTitleTextAppearance="@style/Toolbar.TitleText"
            app:expandedTitleGravity="center"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:src="@drawable/coordinat_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseParallaxMultiplier="0.7"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/lyt1"
                android:layout_width="250dp"
                android:layout_height="580dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inpt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtx1"
                        android:hint="Singkong Original(11.000)"
                        android:layout_marginBottom="10dp"
                        android:inputType="number"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inpt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inpt1">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtx2"
                        android:hint="Singkong 1 rasa (13.000)"
                        android:layout_marginBottom="10dp"
                        android:inputType="number"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@id/inpt2"
                    android:id="@+id/inpt3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtx3"
                        android:hint="Singkong 2 rasa (14.000)"
                        android:layout_marginBottom="10dp"
                        android:inputType="number"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@id/inpt3"
                    android:id="@+id/inpt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtx4"
                        android:hint="Singkong 3 rasa (15.000)"
                        android:layout_marginBottom="10dp"
                        android:inputType="number"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@id/inpt4"
                    android:id="@+id/inpt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtx5"
                        android:hint="Singkong 4 rasa (16.000)"
                        android:layout_marginBottom="10dp"
                        android:inputType="number"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@id/inpt5"
                    android:id="@+id/inpt6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtx6"
                        android:hint="Gethuk goreng (10.000)"
                        android:layout_marginBottom="10dp"
                        android:inputType="number"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@id/inpt6"
                    android:id="@+id/inpt7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtx7"
                        android:hint="Singkong Beku (10.000)"
                        android:layout_marginBottom="10dp"
                        android:inputType="number"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@id/inpt7"
                    android:id="@+id/inpt8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txtx8"
                        android:hint="Pengeluaran Hari ini"
                        android:layout_marginBottom="10dp"
                        android:inputType="number"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgrey"
                    android:layout_marginBottom="20sp"></View>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lyt2"
                android:layout_toEndOf="@+id/lyt1"
                android:layout_toRightOf="@+id/lyt1"
                android:layout_width="match_parent"
                android:layout_height="580dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/result"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result"
                    android:id="@+id/result1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="28dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result1"
                    android:id="@+id/result2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="28dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result2"
                    android:id="@+id/result3"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="29dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result3"
                    android:id="@+id/result4"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="29dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result4"
                    android:id="@+id/result5"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="29dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result5"
                    android:id="@+id/result6"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="29dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/result6"
                    android:id="@+id/result7"
                    android:text="Laba Bersih"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="90dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="center"></TextView>

            </RelativeLayout>
            <Button
                android:layout_below="@+id/lyt1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn1"
                android:background="@color/colorPrimaryDark"
                android:text="Hitung"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:onClick="hitung"></Button>
            <Button
                android:layout_below="@+id/lyt2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn2"
                android:background="@color/colorPrimaryDark"
                android:text="Simpan"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"></Button>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>