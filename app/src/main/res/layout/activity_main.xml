<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgmenu"
    android:padding="10dp"
    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="MENU"
    android:gravity="center"
    android:textSize="23sp"
    android:textStyle="bold"
    android:padding="20dp"
    android:textColor="#000"
    ></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:id="@+id/cv1"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/laba"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/cercleblue"
                    android:padding="10dp"
                    android:src="@drawable/ic_attach_money_black_24dp">

                </ImageView>

                <TextView
                    android:id="@+id/tvlaba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/laba"
                    android:text="Laba"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvlaba"
                    android:text="Masukkan Data Perhitungan"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_below="@+id/cv1"
            android:layout_width="160dp"
            android:layout_height="190dp"
            android:layout_margin="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/laporan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/cercleyelo"
                    android:padding="10dp"
                    android:src="@drawable/ic_assignment_black_24dp">

                </ImageView>

                <TextView
                    android:id="@+id/tvlaporan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/laporan"
                    android:text="Laporan"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvlaporan"
                    android:text="Menampilkan Laporan"
                    android:textAlignment="center"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>